<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/department_item_height"
    android:foreground="?attr/selectableItemBackground">
    <!--- the outer framelayout is to overlay the press effect -->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linear_staff_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_staff_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/default_padding_8dp"
            android:paddingStart="@dimen/default_padding_8dp"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/text_staff_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/default_padding_8dp"
            android:paddingStart="@dimen/default_padding_8dp" />
    </LinearLayout>
</FrameLayout>